<mujoco model="arm_hand_scene_dual">
  <compiler angle="radian" meshdir="combined_arm_hand/assets"/>

  <option integrator="implicitfast" cone="elliptic" impratio="10" timestep="0.01">
    <flag eulerdamp="disable" />
  </option>

  <custom>
    <numeric data="30" name="max_contact_points" />
    <numeric data="12" name="max_geom_pairs" />
  </custom>

  <statistic center="0 0 0.8" extent="1.0"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.9 0.9 0.9 1"/>
    <global azimuth="90" elevation="-50"/>
  </visual>

  <!-- Include both robots -->
  <include file="aero_piper_right.xml"/>
  <include file="aero_piper_left.xml"/>

  <!-- Include table arena scene -->
  <include file="xml_utils/table_arena.xml"/>

  <worldbody>
    <!-- Add second arm mount for left robot on the table -->
    <body name="left_arm_mount" pos="0 0.30 0.81">
      <!-- Second mount point for left robot -->
    </body>

  </worldbody>

  <equality>
    <!-- Weld the right robot base to the table mount -->
    <weld body1="arm_mount" body2="right_base_link" solref="0.02 1"/>
    <!-- Weld the left robot base to the left arm mount -->
    <weld body1="left_arm_mount" body2="left_base_link" solref="0.02 1"/>
  </equality>

  <keyframe>
  </keyframe>
</mujoco>
